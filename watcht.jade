template(name='tripTemplate')
  .trip
    b #{trip_headsign}
    p Id: #{vehicle.vehicle_id} 
    p #{vehicle.vehicle_lat} #{vehicle.vehicle_lon}

template(name='headerTemplate')
  .row
    .col-xs-6
      .title Watch T

    .col-xs-6
      button.btn.btn-default.btn-md.pull-right.current-loc-btn
        .glyphicon.glyphicon-screenshot(aria-hidden="true")
  p

